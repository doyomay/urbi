@font-face
  src url(http://fonts.googleapis.com/css?family=Open\+Sans:400,700)
  font-family 'Open Sans', sans-serif
  font-weight normal
  font-style normal
#lideres
  background white
  float left

#cont
  figure
    background #003294
    height 3em
    width 5em
    display inline
    position relative

#contacto
  float right
  figure
    margin-right 30px

#fondo
  background #F1F1F1

#llamanos
  display inline-block
  float right 
  position relative
  a
    text-decoration none

#log_menu
  header
    figure
      width 10em
      height 6em
      img
        width auto
        height auto
    nav
      ul
        list-style none
        margin 0
        padding 0 6em 0 0.5em
        float right
        margin-top .8em
        li
          display inline-block
          a
            padding-top 2em
            color #2B52A2
            margin 10px
            display block
            &:hover
              text-decoration none
          &:hover
            background #EAEAEA
            border-bottom 3px solid #003294
#desc
  display block
  h4
    color #2B52A2
#imagen_banner
  background #222
  img
    margin 0
    padding 0
    float left
.parrafo
  text-align center
.features
  &:hover
    background #428bca
footer
  background #003294